{
  "transcriber": {
    "backend": "faster_whisper",
    "faster_whisper": {
      "model_size": "base",
      "device": "cpu",
      "compute_type": "int8",
      "preload": true
    },
    "openai_api": {
      "api_key": "",
      "model": "whisper-1"
    }
  },
  "recording": {
    "sample_rate": 16000,
    "channels": 1,
    "speech_threshold": 500,
    "auto_stop_on_silence": false,
    "max_seconds": 300
  },
  "hotkey": {
    "enabled": true,
    "binding": "alt+q",
    "auto_paste": true,
    "auto_send_keywords": ["lets go", "make it happen", "go go", "send it"]
  }
}
