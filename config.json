{
  "transcriber": {
    "backend": "faster_whisper",
    "faster_whisper": {
      "model_size": "base",
      "device": "cpu",
      "compute_type": "int8",
      "preload": true,
      "vad_filter": true,
      "beam_size": 1,
      "language": "en",
      "without_timestamps": true,
      "temperature": 0.0,
      "trim_silence": true,
      "trim_threshold": 300
    },
    "openai_api": {
      "api_key": "",
      "model": "whisper-1"
    }
  },
  "recording": {
    "sample_rate": 16000,
    "channels": 1,
    "speech_threshold": 500,
    "auto_stop_on_silence": false,
    "max_seconds": 300
  },
  "hotkey": {
    "enabled": true,
    "binding": "alt+q",
    "auto_paste": true,
    "auto_send_keywords": ["lets go", "make it happen", "go go", "send it", "send", "over and out"],
    "auto_stop_on_keyword": true,
    "undo_enabled": true,
    "undo_phrases": ["forget that last part", "forget that", "actually forget that"]
  }
}
